<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:gravity="right"
    android:orientation="horizontal" >

    <ImageView
        android:contentDescription="@string/item_imgprofile_description"
        android:layout_width="@dimen/image_profile_message"
        android:layout_height="@dimen/image_profile_message"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:src="@android:color/transparent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/speech_bubble_blue"
        android:gravity="right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Phuong"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtReceiverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="toi Phuong"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:paddingRight="1dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="17:20 5th8"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:shadowColor="@color/textShadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="message................................................................."
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:contentDescription="@string/item_imgprofile_description"
        android:id="@+id/imgIconMessage"
        android:layout_width="@dimen/image_profile_message"
        android:layout_height="@dimen/image_profile_message"
        android:layout_gravity="bottom"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_people" />

</LinearLayout>