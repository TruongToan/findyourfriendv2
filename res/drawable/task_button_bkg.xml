<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid android:color="#222222"/>
            <stroke
                android:width="5dp"
                android:color="@color/blue" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#222222"/>
            <stroke
                android:width="3dp"
                android:color="@color/blue" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>